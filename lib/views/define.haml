- extends 'header.haml'

- block content

    -if sDefinition

        %table.table
            %tr
                %td{ :width => "100%"}
                    %div.pre<>
                        = sDefinition

        %form{ :action => "?", :method => "get" }
            %input{ :type => "hidden", :name => "action", :value => "download" }
            %button.btn.btn-success#download-definition{ :type => "submit", :style => "font-weight: bold;" }
                Download

    -else

        %h3
            Unable to get definition via pg_dump.











